@using WebApplication2.Models
@model List<Person>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET EF Workshop</h1>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <b>First Name</b>

            </div>
            <div class="col-md-4">
                <b>Last name</b>
            </div>
            <div class="col-md-4">
                <b>Age</b>
            </div>
        </div>

        @foreach (Person item in Model)
        {

            <div class="row" id="@("PersonId"+item.Id)">
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.FirstName)

                </div>
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.LastName)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Age)
                </div>
                <div class="col-md-2">
                    @Ajax.ActionLink("Show Details", "PersonDetails", new { id = item.Id },
                   ajaxOptions : new AjaxOptions
                   {
                       UpdateTargetId="PersonId" +item.Id,
                       InsertionMode=InsertionMode.Replace
                   })
                </div>
            </div>
        }
    </div>
</div>